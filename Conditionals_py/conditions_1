x = int(input("Enter the value of x "))
y = int(input("Enter the value of y "))


if x < y:
    print("x is less than y")
elif x > y:
    print("x is greater than y")
elif x == y:
    print("x is equal to y")

#the use of else
x = int(input("Enter the value of x "))
y = int(input("Enter the value of y "))


if x < y:
    print("x is less than y")
elif x > y:
    print("x is greater than y")
else:
    print("x is equal to y")

#using the unequal sign to reduce code
x = int(input("Enter the value of x "))
y = int(input("Enter the value of y "))


if x != y:
    print("x is not equal to y")
else:
    print("x is equal to y")