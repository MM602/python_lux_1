k = 5
while k != 0:
    print("wolf")
    k = k - 1

#Using + rater than -
k = 0
while k < 5:
    print("wolf")
    k = k + 1

#the seconf can also be written as
k = 0
while k < 5:
    print("wolf")
    k += 1

#Rewriting the code using the "for" loop
for k in [0, 1, 2, 3, 4]:
    print("wolf")

#Using the range function
for k in range(5):
    print("wolf")

#Using an unnamed variable
for _ in range(5):
    print("wolf")

#Using a simpler formart and a "\n" to enter another line
print("wolf\n" * 5)

#Removing the "enter" character at the bottom of the code
print("wolf\n" * 5, end = "")

#Requesting for the input value from the user
while True:
    t = int(input("Enter the value of t:"))
    if t > 0:
        break

for _ in range(t):
    print("wolf")

#defining the wolf function
def main():
    wolf(5)

def wolf(p):
    for _ in range(p):
        print("wolf")

main()

#Addinng another function to get number from user
def main():
    number = get_number()
    wolf(number)

def get_number():
    while True:
        p = int(input("Enter the value of p"))
        if p > 0:
            return p

def wolf(p):
    for _ in range(p):
        print("wolf")

main()