k = 5
while k != 0:
    print("wolf")
    k = k - 1

#Using + rater than -
k = 0
while k < 5:
    print("wolf")
    k = k + 1

#the seconf can also be written as
k = 0
while k < 5:
    print("wolf")
    k += 1

#Rewriting the code using the "for" loop
for k in [0, 1, 2, 3, 4]:
    print("wolf")

#Using the range function
for k in range(5):
    print("wolf")

#Using an unnamed variable
for _ in range(5):
    print("wolf")

#Using a simpler formart and a "\n" to enter another line
print("wolf\n" * 3)

#Removing the "enter" character at the bottom of the code
print("wolf\n" * 3, end = "")