name = input("What is your name? ")
name = name.strip()
name = name.title()

print(f"Hello, {name}")

#writing the code in a simpler format
name = input("What is your name? ").strip().title()
print(f"Hello, {name}")

#split user's first and last name
first, last = name.split(" ")

print(f"Hello, {first}")