def hello():
    print("hello")

name = input("What is your name? ")
hello()
print(name)

#parametarise the code
def hello(to):
    print("hello,", to)

name = input("What is your name? ")
hello(name)

#calculations using the def function
def main():
    x = int(input("What is x? "))
    print("x squared is", square(x))

def square(n):
    return n * n


main()